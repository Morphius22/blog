extends layout 

block content 
    h1 Create a New Blog Post 
    form.flex.justify-center(method='POST' action='')
        .form-control.w-full.max-w-xs.flex.flex-col.justify-center
            label.label.mt-6
                span.label-text Title
            input.input.input-bordered.w-full.max-w-xs(type='text' placeholder='title' name='title' required)
            label.label.mt-6
                span.label-text Content
            textarea.textarea.textarea-bordered(placeholder='content' name='content' required)
            label.label
                span.label-text Publish or Save?
            select.select.select-bordered(name='status' required)
                //- option(disabled='' selected='') Pick one
                option(value="publish") Publish
                option(value="draft") Draft
            button(type='submit').btn.btn-primary.mt-6 Submit

    if errors && errors.length > 0
        each error in errors 
            .alert.w-fit.alert-error.mt-6.text-center.mx-auto
                svg.stroke-current.shrink-0.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z')
                span
                    p= error.msg     